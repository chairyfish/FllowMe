        <!--</LinearLayout>-->

    </LinearLayout>

    <Button
        android:id="@+id/btnlogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape_a"
        android:text="退出登录" />

</LinearLayout>
